@model List<Nvd.lab4._1.Models.NvdCustomer>
@{
    ViewBag.Title = "Danh sách khách hàng";
    int stt = 0;
}
<h2>Danh sách khách hàng</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Mã KH</th>
            <th>Họ và tên</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Số dư</th>
        </tr>
    </thead>
    <tbody>
        @*Hiển thị danh sách khách hàng*@
        @foreach (var item in Model)
        {
            stt++;
            <tr>
                <td>@stt</td>
                <td>@item.CustomerId</td>
                <td>@item.FullName</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Balance</td>
            </tr>
        }
    </tbody>
</table>
